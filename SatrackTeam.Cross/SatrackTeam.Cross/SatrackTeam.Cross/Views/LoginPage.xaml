<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SatrackTeam.Cross.Views.LoginPage">
  <StackLayout Orientation="Vertical">
      <Label Text="Usuario" VerticalOptions="Center" HorizontalOptions="Center" />
      <Entry Text="{Binding userViewModel.UserName, Mode=TwoWay}" />
      <Label Text="Password" VerticalOptions="Center" HorizontalOptions="Center" />
      <Entry Text="{Binding userViewModel.Password, Mode=TwoWay}" />
      <Button Text="Ingresar" Command="{Binding userViewModel.LoginCommand}"/>
  </StackLayout>
</ContentPage>